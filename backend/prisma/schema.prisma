generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Vote {
  id      Int      @id @default(autoincrement()) // 自動遞增 ID
  option  String // 投票選項
  ip      String   @unique // 限制同一 IP 只能投一次
  created DateTime @default(now()) // 投票時間
}
